<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="SmokeTests">

    <test name="Checklist exists after creation">
        <classes>
            <class name="com.epam.ta.tests.ChecklistsTest">
                <methods>
                    <include name="checkChecklistExistence"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="task exists in a checklist after creation">
        <classes>
            <class name="com.epam.ta.tests.ChecklistsTest">
                <methods>
                    <include name="checkTasksExistenceInChecklist"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>